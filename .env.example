# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PLATFORM_ACCOUNT=acct_...

# Payment Settings
PLATFORM_FEE_PERCENTAGE=5
MIN_PAYOUT_AMOUNT=50
ESCROW_HOLD_DAYS=7

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_username
EMAIL_PASSWORD=your_password
EMAIL_FROM=noreply@hushapp.com
EMAIL_FROM_NAME=Hush App

# Admin Configuration
ADMIN_EMAIL=admin@hushapp.com
ADMIN_PASSWORD=Admin123!@#
ADMIN_COOKIE_SECRET=some_very_secure_secret_key_here 
JWT_ADMIN_SECRET=admin_jwt_secret_key_here

# Feature Flags
ENABLE_SOCKET_IO=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true 